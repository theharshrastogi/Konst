<html>
	<head>
		<title>Konst - Annoucements</title>
		<link rel="stylesheet" href="/css/annoucements.css" />
		
		<link rel="preconnect" href="https://fonts.gstatic.com" />
		<link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400&family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/scss/main.css">

		<script src="https://code.jquery.com/jquery-3.6.0.slim.min.js" integrity="sha256-u7e5khyithlIdTpu22PHhENmPcRdFiHRjhAuHcs05RI=" crossorigin="anonymous"></script>
	</head>
	<body>
		<%-include("partials/navbar.ejs")%>
		<div class="container">
			<% annoucements.forEach((annouce)=>{%>
				<div class="annoucement">
					<div class="heading"><%= new Date(annouce.createdOn).toLocaleDateString()+ ":" + annouce.subject %> </div> 
					<h6><%= new Date(annouce.createdOn).getHours().toString().padStart(2,'0')  %>:<%= new Date(annouce.createdOn).getMinutes().toString().padStart(2,'0') %></h6>
					<div class="content"><%= annouce.content%></div>
				</div>
			<%});%>
		</div>
		<script src="/js/nav.js"></script>
	</body>
</html>
